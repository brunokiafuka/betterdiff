{
  "name": "desktop",
  "version": "0.1.0",
  "description": "A forensic diff viewer with blame, compare, and AI explanations",
  "main": "dist-electron/main/main.cjs",
  "type": "module",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "tsc && electron-vite build && electron-builder",
    "preview": "electron-vite preview",
    "electron:dev": "electron-vite dev",
    "electron:build": "electron-builder"
  },
  "dependencies": {
    "@octokit/graphql": "^7.0.2",
    "@octokit/rest": "^20.0.2",
    "@whodidit/ui": "workspace:*",
    "better-sqlite3": "^9.3.0",
    "diff": "^5.2.0",
    "lucide-react": "^0.344.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.9",
    "@types/diff": "^5.0.9",
    "@types/node": "^20.11.5",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1",
    "electron-vite": "^5.0.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "vite-plugin-electron": "^0.28.2",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "build": {
    "appId": "com.whodidit.app",
    "productName": "WhoDidIt",
    "directories": {
      "output": "../../release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icon.png"
    }
  }
}
